{
  "name": "harbor-ops",
  "private": false,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "build": "npm --workspaces run build",
    "test": "npm --workspaces run test --if-present",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run dev -- --host 0.0.0.0",
    "start:backend": "npm --workspace backend run start",
    "start:frontend": "npm --workspace frontend run preview -- --host 0.0.0.0",
    "db:migrate": "npm --workspace backend run db:migrate",
    "db:seed": "npm --workspace backend run db:seed",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "prettier": "3.7.4"
  },
  "type": "module",
  "overrides": {
    "esbuild": "0.25.10"
  }
}
